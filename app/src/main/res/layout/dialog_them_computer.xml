<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm Computer"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/teal_200"
        android:gravity="center"
        android:padding="10dp"
        android:id="@+id/textThem"/>

    <EditText
        android:hint="Nhập tên PC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextTenPC"
        android:layout_marginTop="10dp"
        android:layout_below="@id/textThem"/>

    <Button
        android:text="Thêm"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/editTextTenPC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonThem"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/buttonHuy"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTenPC"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/buttonThem"
        android:text="Hủy" />


</RelativeLayout>